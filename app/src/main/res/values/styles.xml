<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pubBGGray</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/pubWhite</item>
    </style>

    <style name="ActivityTheme">
        <item name="android:background">@color/pubCardBGGray</item>
    </style>

    <style name="MainToolbar">
        <item name="android:background">@color/pubBGGray</item>
        <item name="android:textColor">@color/pubWhite</item>
        <item name="android:textColorHighlight">@color/pubOrange</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="CardThemeV21" parent="CardView">
        <item name="android:textColor">@color/pubWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">50sp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:elevation" tools:ignore="NewApi">16dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
